@model QuickBooksOnlineAPIs.Models.InvoiceCustomer

@{
    ViewBag.Title = "New Invoice";
}


@using (Html.BeginForm("AddInvoice", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="container">
        <div class="row" style="padding-top:15px;">
            <div class="col-lg-12" style="background-color:whitesmoke;padding-top:5px;">
                <div style="padding-left:300px ; ">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Line[0].DetailType, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10" style="padding-bottom: 20px;">
                            @Html.TextBoxFor(m => m.Line[0].DetailType, new { @class = "form-control" })

                            @Html.ValidationMessageFor(m => m.Line[0].DetailType, "", new { @class = "text-danger" })

                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Line[0].Amount, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10" style="padding-bottom: 20px;">
                            @Html.TextBoxFor(m => m.Line[0].Amount, new { @class = "form-control" })

                            @Html.ValidationMessageFor(m => m.Line[0].Amount, "", new { @class = "text-danger" })

                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Line[0].SalesItemLineDetail.ItemRef.name, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10" style="padding-bottom: 20px;">
                            @Html.TextBoxFor(m => m.Line[0].SalesItemLineDetail.ItemRef.name, new { @class = "form-control" })

                            @Html.ValidationMessageFor(m => m.Line[0].SalesItemLineDetail.ItemRef.name, "", new { @class = "text-danger" })

                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Line[0].SalesItemLineDetail.ItemRef.value, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10" style="padding-bottom: 20px;">
                            @Html.TextBoxFor(m => m.Line[0].SalesItemLineDetail.ItemRef.value, new { @class = "form-control" })

                            @Html.ValidationMessageFor(m => m.Line[0].SalesItemLineDetail.ItemRef.value, "", new { @class = "text-danger" })

                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(m => m.CustomerID, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10" style="padding-bottom: 20px;">
                            @Html.DropDownListFor(m => m.CustomerID, new SelectList(Model.Customers, "ID", "DisplayName"), "Select a Customer", new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.CustomerID, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10" style="padding-bottom: 20px;">
                            <input type="submit" value="Save" class="btn btn-default" />

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
